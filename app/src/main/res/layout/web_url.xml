<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <WebView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/web"></WebView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/shape_qita"
            android:hint="评论"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/kongjian"
                android:background="@drawable/ss_cmt_icon"/>

            <ImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/shoucang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/shoucang"></ImageView>

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/haoyou"
                android:background="@drawable/share_jokebar_textpage_normal"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>